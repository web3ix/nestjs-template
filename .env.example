##== Environment
NODE_ENV=development
MODULES_SET=monolith

##== Application
APP_NAME="NestJS API"
APP_URL=http://localhost:5000
APP_PORT=5000
APP_DEBUG=false
API_PREFIX=
APP_FALLBACK_LANGUAGE=en
APP_LOG_LEVEL=debug
APP_LOG_SERVICE=console
APP_CORS_ORIGIN=http://localhost:5000,http://127.0.0.1:5000,http://example.com
APP_OTLP_ENDPOINT=http://localhost:4318/v1/traces
APP_OTLP_INSTANCE_ID=12345678
APP_OTLP_API_KEY=api_key

##== HTTP Platform
# Options: fastify (default, faster), express (more plugins)
HTTP_PLATFORM=fastify
##== Database (Drizzle ORM)
# Runtime: PostgreSQL (production-optimized)
# Schemas: SQLite-compatible (TEXT-based UUIDs, no pgEnum)
#
# PostgreSQL (recommended for production):
#   Format: postgresql://username:password@host:port/database
#   Example: postgresql://postgres:postgres@localhost:5432/nestjs_dev
#
# SQLite (alternative for dev/testing - requires service changes):
#   Format: sqlite://path/to/database.db
#   Example: sqlite://./.sqlite/dev.db
#   Note: See docs/SQLITE_MIGRATION.md for setup instructions
DATABASE_URL=sqlite://./.sqlite/dev.db

##== Cache
# Options: redis (production), memory (development/testing)
CACHE_DRIVER=memory

##== Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass
REDIS_TLS_ENABLED=false

##== Mailer
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USER=
MAIL_PASSWORD=
MAIL_IGNORE_TLS=true
MAIL_SECURE=false
MAIL_REQUIRE_TLS=false
MAIL_DEFAULT_EMAIL=noreply@example.com
MAIL_DEFAULT_NAME=No Reply
MAIL_CLIENT_PORT=1080

##== Authentication
AUTH_JWT_SECRET=secret
AUTH_JWT_TOKEN_EXPIRES_IN=1d
AUTH_REFRESH_SECRET=secret_for_refresh
AUTH_REFRESH_TOKEN_EXPIRES_IN=365d
AUTH_FORGOT_SECRET=secret_for_forgot
AUTH_FORGOT_TOKEN_EXPIRES_IN=7d
AUTH_CONFIRM_EMAIL_SECRET=secret_for_confirm_email
AUTH_CONFIRM_EMAIL_TOKEN_EXPIRES_IN=1d
GOOGLE_CLIENT_ID=id
GOOGLE_CLIENT_SECRET=secret

##== Vault
VAULT_ENDPOINT=http://localhost:8200
VAULT_TOKEN=token

##== Background
PONDER_URL=https://localhost/graphql
