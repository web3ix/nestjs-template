{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "root": "src",
  "compilerOptions": {
    "builder": "swc",
    "typeCheck": true,
    "deleteOutDir": true,
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true
      },
      {
        "include": "**/*.hbs",
        "watchAssets": true
      },
      {
        "include": "**/*.proto",
        "watchAssets": true
      }
    ],
    "webpack": true,
    "tsConfigPath": "tsconfig.json"
  }
}
